    <script>
        window.onscroll = function () {
            var header = document.querySelector('.cabecalho');

            if (window.pageYOffset > 0) { // Verifica se a página foi rolada
                header.classList.add('scrolled'); // Adiciona a classe 'scrolled'
            } else {
                header.classList.remove('scrolled'); // Remove a classe 'scrolled' se estiver no topo
            }
        }

        // Aguarda o DOM ser completamente carregado
        document.addEventListener('DOMContentLoaded', function () {
            // Seleciona todos os contêineres de ícones de serviço
            const iconContainers = document.querySelectorAll('.iconeServico');

            // Adiciona eventos de mouseover e mouseout em cada contêiner
            iconContainers.forEach(container => {
                const img = container.querySelector('.img_box');
                const saibaMais = container.querySelector('.saiba-mais');

                // Quando o mouse estiver sobre o contêiner
                container.addEventListener('mouseover', () => {
                    img.style.opacity = '0.3'; // Reduz a opacidade da imagem
                    saibaMais.style.opacity = '1'; // Exibe o texto "Saiba mais"
                });

                // Quando o mouse sair do contêiner
                container.addEventListener('mouseout', () => {
                    img.style.opacity = '1'; // Restaura a opacidade da imagem
                    saibaMais.style.opacity = '0'; // Oculta o texto "Saiba mais"
                });
            });
        });
    </script>