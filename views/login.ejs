<%- include('partials/header.ejs') %>

<div class="mx-auto my-52 h-fit py-7 px-9 size-96 rounded-3xl bg-slate-200/30 text-center">
    <div class="absolute -mt-20 ml-24 size-28 content-center rounded-full bg-red-800">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="ml-7 size-14 text-white">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
        </svg>
    </div>
    <div class="mx-auto w-72 pt-28">
        <form action="/login" method="post">
            <div class="flex">
                <div class="self-center rounded-s-lg bg-red-800 px-2.5 py-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-white">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                    </svg>
                </div>
                <label class="w-full">
                    <input type="email" name="email" class="h-10 w-full rounded-e-lg border border-gray-500 bg-slate-400/30 p-3 text-gray-800 placeholder:text-gray-600" placeholder="Email" required/>
                </label>
            </div>
            <div class="mt-5 flex">
                <div class="self-center rounded-s-lg bg-red-800 px-2.5 py-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-white">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z" />
                    </svg>
                </div>
                <label class="w-full">
                    <input type="password" name="senha" class="h-10 w-full rounded-e-lg border border-gray-500 bg-slate-400/30 p-3 text-gray-800 placeholder:text-gray-600" placeholder="Password" required/>
                </label>
            </div>
            <b> <%= msg ?? "" %> </b>
            <button type="submit" class="mt-10 rounded-lg bg-red-800 px-4 py-2 w-32 text-white mx-auto hover:bg-red-900 cursor-pointer">Login</button>
        </form>
    </div>
    
    <div class="mt-12 flex justify-between text-sm">
        <div class="hover:font-semibold">
            <input id="remember" type="checkbox" class="size-4 rounded-lg border border-gray-500" />
            <label for="remember" class="ml-1">Lembrar de mim</label>
        </div>
        <div>
            <a class="cursor-pointer hover:font-semibold" href="/forgetPassword">Esqueci minha senha</a>
        </div>
    </div>
</div>
  
<%- include('partials/footer.ejs') %>